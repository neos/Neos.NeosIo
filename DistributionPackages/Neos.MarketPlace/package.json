{
  "name": "neos-marketplace",
  "version": "0.0.1",
  "description": "Neos.io marketplace package",
  "author": "Neos Team",
  "scripts": {
    "build:scripts": "browserify -t [ babelify ] -p browserify-derequire Resources/Private/JavaScript/index.js > Resources/Public/JavaScript/Bundle.min.js",
    "fix:amd": "fandr Resources/Public/JavaScript/Bundle.min.js '{\"&& define.amd\": \"&& false\"}'",
    "build:sass": "node-sass Resources/Private/Scss/ -o Resources/Public/Styles/",
    "postbuild:sass": "postcss --use autoprefixer --autoprefixer.browsers 'last 4 versions' Resources/Public/Styles/*.css -d Resources/Public/Styles/",
    "build": "npm run build:scripts && npm run build:sass && npm run fix:amd",
    "minify:scripts": "uglifyjs Resources/Public/JavaScript/Bundle.min.js -m -c -o Resources/Public/JavaScript/Bundle.min.js",
    "minify:styles": "uglifycss --output Resources/Public/Styles/Main.css Resources/Public/Styles/Main.css",
    "minify": "npm run minify:scripts && npm run minify:styles",
    "lint:scripts": "eslint --parser babel-eslint Resources/Private/JavaScript/**",
    "lint": "npm run lint:scripts",
    "watch:scripts": "watchify -v -t [ babelify ] Resources/Private/JavaScript/index.js -o Resources/Public/JavaScript/Bundle.min.js",
    "watch:sass": "npm run build:sass -- -w",
    "watch": "npm run watch:scripts & npm run watch:sass",
    "test": "npm run lint"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-eslint": "^6.0.4",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.9.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "browserify-derequire": "^0.9.4",
    "customizr": "^1.0.0-alpha",
    "eslint": "^2.10.2",
    "eslint-config-xo": "^0.14.1",
    "eslint-plugin-babel": "^3.2.0",
    "eslint-plugin-react": "^5.1.1",
    "find-and-replace-cli": "^0.1.1",
    "node-sass": "^4.11.0",
    "postcss-cli": "^2.5.2",
    "uglifycss": "^0.0.29",
    "uglify-js": "^3.4.9",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "@reduct/assembler": "^2.0.4",
    "@reduct/component": "^4.1.2",
    "@reduct/nitpick": "^3.1.0",
    "babel-polyfill": "^6.5.0",
    "dom-add-class": "^0.1.7",
    "hash-change": "^0.1.0",
    "lodash.debounce": "^4.0.6",
    "raf": "^3.2.0",
    "whatwg-fetch": "^1.0.0"
  }
}
