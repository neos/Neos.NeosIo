prototype(Neos.NeosIo:Component.ClassicButton) < prototype(Neos.Fusion:Component) {
    color = ''
    uri = null

    additionalClassName = ''
    className = 'btn'

    renderer = afx`
        <a class={[props.className, props.color, props.additionalClassName]} href={props.uri}>
            <span class="btn__content">{props.content}</span>
        </a>
    `
}
