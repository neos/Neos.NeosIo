{
    "name": "neos/neos-io-distribution",
    "description" : "neos.io website distribution",
    "license": "GPL-3.0-or-later",
    "config": {
        "vendor-dir": "Packages/Libraries",
        "bin-dir": "bin",
        "platform": {
            "php": "7.3"
        }
    },
    "require": {
        "neos/neosio": "*",
        "neos/flowneosio": "*",
        "neos/neosio-featurelist": "*",
        "neos/neosconio": "*",

        "flownative/google-cloudstorage": "^5.0",
        "rokka/imagine-vips": "^0.9",
        "wwwision/neos-creationdialogproperties": "^0.5.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "neos/buildessentials": "^4.0",
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^7.0"
    },
    "repositories": [
        {
            "type": "path",
            "url": "./DistributionPackages/*"
        },
        {
            "type": "vcs",
            "url": "https://github.com/kdambekalns/OutOfBandRendering.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/kdambekalns/Neos.MarketPlace.git"
        }
    ],
    "scripts": {
        "post-update-cmd": "Neos\\Flow\\Composer\\InstallerScripts::postUpdateAndInstall",
        "post-install-cmd": "Neos\\Flow\\Composer\\InstallerScripts::postUpdateAndInstall",
        "post-package-update":"Neos\\Flow\\Composer\\InstallerScripts::postPackageUpdateAndInstall",
        "post-package-install":"Neos\\Flow\\Composer\\InstallerScripts::postPackageUpdateAndInstall"
    }
}
